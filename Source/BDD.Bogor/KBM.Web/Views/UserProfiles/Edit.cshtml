@model KBM.Web.Data.UserProfile

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>User Profile</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="UserId" />
        <div class="form-group">
            <label asp-for="UserName" class="col-md-2 control-label">User Name</label>
            <div class="col-md-10">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Nama" class="col-md-2 control-label">Nama Lengkap</label>
            <div class="col-md-10">
                <input asp-for="Nama" class="form-control" />
                <span asp-validation-for="Nama" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TanggalLahir" class="col-md-2 control-label">Tanggal Lahir</label>
            <div class="col-md-10">
                <input asp-for="TanggalLahir" class="form-control" type="date" />
                <span asp-validation-for="TanggalLahir" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Kategori" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Kategori" class="form-control">
                    <option value="Cabe rawit">Cabe rawit</option>
                    <option value="Muda-mudi">Muda-mudi</option>
                    <option value="Dewasa">Dewasa</option>
                    <option value="Lansia">Lansia</option>
                </select>
                <span asp-validation-for="Kategori" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Telepon" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Telepon" class="form-control" />
                <span asp-validation-for="Telepon" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Alamat" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Alamat" class="form-control" />
                <span asp-validation-for="Alamat" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control" type="email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Kelompok" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Kelompok" class="form-control" />
                <span asp-validation-for="Kelompok" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

