@model KBM.Web.Data.Ujian

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Ujian</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nilai" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nilai" class="form-control" type="number" />
                <span asp-validation-for="Nilai" class="text-danger" ></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Status" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Status" class="form-control">
                    <option value="Tidak Lulus">Tidak Lulus</option>
                    <option value="Lulus">Lulus</option>
                    <option value="Lulus Terbaik">Lulus Terbaik</option>

                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Tanggal" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Tanggal" class="form-control" type="date" />
                <span asp-validation-for="Tanggal" class="text-danger" ></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

